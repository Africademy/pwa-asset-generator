    "type": "git",
    "url": "git+https://github.com/onderceylan/pwa-asset-generator.git"
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "keywords": [
    "pwa",
    "icon",
    "icons",
    "launch-image",
    "ios",
    "android",
    "splashscreen",
    "splash-screen",
    "image-generation",
    "image",
    "manifest"
  ],
  "author": "Ã–nder Ceylan <onderceylan@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onderceylan/pwa-asset-generator/issues"
  },
  "homepage": "https://github.com/onderceylan/pwa-asset-generator#readme",
  "dependencies": {
    "chalk": "^2.4.2",
    "cheerio": "^1.0.0-rc.3",
    "file-url": "^3.0.0",
    "lodash.isequal": "^4.5.0",
    "lodash.uniqwith": "^4.5.0",
    "meow": "^5.0.0",
    "puppeteer": "^1.19.0"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/**.{js}": [
      "npm run lint:fix",
      "git add"
    ]
